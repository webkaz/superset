{
	"name": "@superset/repo",
	"version": "0.0.0",
	"repository": {
		"type": "git"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"sherif": "^1.7.0",
		"turbo": "^2.5.8"
	},
	"description": "Superset Monorepo",
	"homepage": "https://superset.sh",
	"license": "Apache-2.0",
	"packageManager": "bun@1.3.0",
	"private": true,
	"scripts": {
		"dev": "turbo dev --filter=@superset/api --filter=@superset/web --filter=@superset/desktop",
		"dev:all": "turbo dev",
		"dev:docs": "turbo dev --filter=@superset/docs",
		"dev:blog": "turbo dev --filter=@superset/blog",
		"dev:cli": "turbo dev --filter=@superset/cli",
		"dev:website": "turbo dev --filter=@superset/website",
		"build": "turbo build --filter=@superset/desktop",
		"test": "turbo test",
		"db:generate": "turbo db:generate",
		"db:push": "cd packages/db && bun db:push",
		"db:seed": "cd packages/db && bun db:seed",
		"db:migrate": "cd packages/db && bun db:migrate",
		"db:studio": "cd packages/db && bun db:studio",
		"db:reset": "cd apps/backend && bun run reset",
		"lint": "./scripts/lint.sh",
		"lint:fix": "biome check --write --unsafe .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "turbo typecheck",
		"ui-add": "turbo run ui-add",
		"postinstall": "sherif",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo clean"
	},
	"type": "module",
	"workspaces": [
		"packages/*",
		"apps/*",
		"tooling/*"
	]
}
